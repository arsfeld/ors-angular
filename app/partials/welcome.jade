
div(ng-controller='WelcomeController')

  h3 Select below which program you are interested:
  .row-fluid
    img(src="img/loader.gif", ng-show="loadingProducts")
    ul.nav.nav-pills
      li.span3(ng-repeat="product in allProducts | orderBy: 'name' ")
        //a(href="#/register/{{product._id.$oid}}")
        a(href="#/register/{{product.slug}}")
        
          h2 {{product.name}}
          h4 {{product.tagline}}