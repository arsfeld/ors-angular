
div(ng-controller='WelcomeController')

  img(src="img/loader.gif", ng-hide="allProducts")
  div(ng-show="allProducts")

      h3(translate) Select below which program you are interested:
      .row-fluid
        a(href="'/partials/admin/nav.{{locale}}.html'")
        ul.nav.nav-pills
          li.span3(ng-repeat="product in allProducts | orderBy: 'name' ")
            //a(href="/#/register/{{product._id.$oid}}")
            a(href="/register/{{product.slug}}")
            
              h2 {{product.name}}
              h4 {{product.tagline}}