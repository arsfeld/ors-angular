

div
  .row-fluid
    .span3
      div(ng-include="'/partials/admin/nav.html'")
    .span6
      div(ng-controller='OfficesController')
        .row-fluid
          h2 Offices
          //img(src="img/loader.gif", ng-show="loading")
          //div(ng-hide="loading")
          form.form-inline(name="officeForm")
            input.input-medium(type="text", placeholder="SÃ£o Carlos")
            .input-prepend
              span.add-on @
              input.input-mini(type="text", placeholder="SC")
            button.btn.btn-primary(type="submit") Add office
            br
            smal.muted Nick is the two letter name for this office
          .btn-toolbar
            input.span8.search-query(type="text", ng-model="search", class="offices-query", placeholder="Search")
          span
          table.table.table-striped.table
            thead
              tr
                th Office
                th Nickname
                th
            tbody
              tr(ng-repeat="office in offices | filter: search | orderBy: 'name' ")
                td
                  div(ng-hide="editing") {{office.name}}
                  input(ng-show="editing", type="text", name="name", ng-model="office.name")
                td 
                  div(ng-hide="editing") @{{office.nick}}
                  input.small(ng-show="editing", type="text", name="nick", ng-model="office.nick")
                td
                  a.btn(ng-hide="editing", ng-click="editing = true")
                    i.icon-edit
                    span Edit
                  button.btn.btn-primary(ng-show="editing", ng-click="save(office)")
                    span Save
          img(src="img/loader.gif", ng-show="loading")