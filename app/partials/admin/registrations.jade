

div
  .row-fluid
    .span3
      div(ng-include="'/partials/admin/nav.html'")
    .span6
      div(ng-controller='RegistrationController')
        .row-fluid
          h2 Registrations
          span
          table.table.table-striped.table
            thead
            tr
              th Name
              th Tagline
              th Slug
              th
            tbody
              tr(ng-repeat="product in products | orderBy: 'name' ")
                td {{product.name}}
                td {{product.tagline}}
                td {{product.slug}}
                td
                  a.btn(href="/admin/products/edit/{{product._id.$oid}}") 
                    i.icon-edit
                    span Edit
                  a.btn.btn-danger(ng-click="deleteProduct(product._id.$oid)") Delete
        div(ng-show="loading")
          img(src="img/loader.gif") 